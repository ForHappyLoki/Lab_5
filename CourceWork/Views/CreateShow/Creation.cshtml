@model CourceWork.Models.Tvshow

@{
    ViewBag.Title = "Создание шоу";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreationEditing" method="post">
    <div class="form-group">
        <label asp-for="Title">Название телепередачи</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Описание шоу</label>
        <input asp-for="Description" class="form-control" type="date" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration">Длительность</label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

