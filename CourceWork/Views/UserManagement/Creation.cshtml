@model CourceWork.Models.Employee

@{
    ViewBag.Title = "Создание";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreationEditing" method="post">
    <div class="form-group">
        <label asp-for="FullName">Имя сотрудника</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HireDate">Дата принятия на работу</label>
        <input asp-for="HireDateString" class="form-control" type="date" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position">Должность</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Login">Логин</label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role">Роль</label>
        <select asp-for="Role" class="form-control">
            <option value="user">Пользователь</option>
            <option value="moder">Модератор</option>
            <option value="admin">Администратор</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}